<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjpowernode.dataservice.mapper.FinanceAccountMapper">
  <resultMap id="BaseResultMap" type="com.bjpowernode.entity.FinanceAccount">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="uid" jdbcType="INTEGER" property="uid" />
    <result column="available_money" jdbcType="DECIMAL" property="availableMoney" />
  </resultMap>
  <sql id="Base_Column_List">
    id, uid, available_money
  </sql>

  <!--查询资金账户-->
  <select id="selectUid" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"></include>
    from u_finance_account
    where uid = #{uid}
  </select>
  <!--查询资金账户上锁-->
  <select id="selectUidForUpdate" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"></include>
    from u_finance_account
    where uid = #{uid} for update
  </select>


  <insert id="insert">
    insert into u_finance_account (uid, available_money)
    values ( #{uid,jdbcType=INTEGER}, #{availableMoney,jdbcType=DECIMAL} )
  </insert>

  <!--投资，减少账户资金余额-->
  <update id="reduceAccountAvailableMoney">
    update u_finance_account set available_money = available_money - #{bidMoney}
    where uid = #{uid} and ( available_money - #{bidMoney} >=0 )
  </update>

  <!--收益返还，更新资金余额-->
  <update id="updateMoneyIncomeBack">
    update u_finance_account set available_money = available_money + #{bidMoney} + #{incomeMoney}
    where uid = #{uid}
  </update>

  <!--充值，修改金额-->
  <update id="updateMoneyRecharge">
    update u_finance_account set available_money = available_money + #{rechargeMoney}
    where uid=#{uid}
  </update>

</mapper>